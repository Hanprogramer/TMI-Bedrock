{
    "namespace": "tmi",
    "simple_panel": {
        "type": "panel",
        "size": [
            "60%",
            "50%"
        ],
        "anchor_from": "center",
        "anchor_to": "center",
        "controls": [
            {
                "bg": {
                    "type": "image",
                    "texture": "textures/ui/background_panel",
                    "size": [
                        "100%",
                        "100%"
                    ],
                    "keep_ratio": false,
                    "fill": true,
                    "nineslice_size": 8
                }
            },
            {
                "title": {
                    "type": "label",
                    "text": "#text",
                    "font_size": "large",
                    "color": [
                        1.0,
                        1.0,
                        1.0
                    ],
                    "shadow": true,
                    "anchor_from": "top_middle",
                    "anchor_to": "top_middle",
                    "offset": [
                        0,
                        12
                    ],
                    "layer": 1,
                    "bindings": [
                        {
                            "binding_name": "#title_text",
                            "binding_name_override": "#text",
                            "binding_condition": "always_when_visible"
                        }
                    ]
                }
            },
            // Top-right X button to close
            {
                "close@common_buttons.light_text_button": {
                    "$button_text": "x",
                    "$pressed_button_name": "tmi_close_modal",
                    "size": [
                        18,
                        18
                    ],
                    "anchor_from": "top_right",
                    "anchor_to": "top_right",
                    "offset": [
                        -6,
                        6
                    ],
                    "layer": 2
                }
            },
            // Content area holding the 3x3 grid, arrow and output slot
            {
                "content": {
                    "type": "panel",
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "offset": [
                        0,
                        12
                    ],
                    "controls": [
                        {
                            "crafting_grid": {
                                "type": "panel",
                                "size": [
                                    "100%",
                                    "50% - 12px"
                                ],
                                "offset": [
                                    0,
                                    0
                                ],
                                "anchor_to": "top_left",
                                "anchor_from": "top_left",
                                "controls": [
                                    {
                                        "input_grid@tmi.input_grid": {}
                                    }
                                ]
                            }
                        },
                        {
                            "arrow": {
                                "type": "label",
                                "text": "â†’",
                                "font_size": "large",
                                "color": [
                                    1.0,
                                    1.0,
                                    1.0
                                ],
                                "anchor_from": "center",
                                "anchor_to": "center"
                            }
                        },
                        {
                            "output_slot@tmi.slot_item_template": {
                                "anchor_from": "middle_right",
                                "anchor_to": "middle_right",
                                "offset": [
                                    56,
                                    0
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "slot_item_template@common.container_item": {
        "$item_collection_name": "container_items"
    },
    "input_grid": {
        "type": "grid",
        "anchor_from": "center",
        "anchor_to": "center",
        "offset": [
            3,
            3
        ],
        "grid_dimensions": [
            3,
            3
        ],
        "collection_name": "container_items",
        "grid_item_template": "tmi.slot_item_template",
        "$item_collection_name": "container_items"
    },
    "recipe_screen@common.inventory_screen_common": {
        "type": "screen",
        "is_modal": true,
        "force_render_below": true,
        "absorbs_input": true,
        "is_showing_menu": true,
        "button_mappings": [
            {
                "from_button_id": "button.menu_cancel",
                "to_button_id": "button.menu_exit",
                "mapping_type": "global"
            }
        ],
        "controls": [
            {
                "modal_bg": {
                    "type": "image",
                    "texture": "textures/ui/Black",
                    "alpha": 0.55,
                    "size": [
                        "100%",
                        "100%"
                    ],
                    "anchor_from": "top_left",
                    "anchor_to": "top_left",
                    "keep_ratio": false,
                    "fill": true,
                    "layer": 0
                }
            },
            {
                "content@tmi.simple_panel": {
                    "layer": 1
                }
            }
        ]
    }
