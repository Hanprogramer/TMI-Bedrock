{
    "namespace": "tmi",
    "simple_panel": {
        "type": "panel",
        "size": [
            180,
            180
        ],
        "anchor_from": "center",
        "anchor_to": "center",
        "controls": [
            {
                "bg": {
                    "type": "image",
                    "texture": "textures/ui/dialog_background_opaque",
                    "size": [
                        "100%",
                        "100%"
                    ],
                    "keep_ratio": false,
                    "fill": true,
                    "nineslice_size": 8
                }
            },
            {
                "title": {
                    "type": "label",
                    "text": "#text",
                    "font_size": "medium",
                    "color": [
                        1.0,
                        1.0,
                        1.0
                    ],
                    "shadow": true,
                    "anchor_from": "top_middle",
                    "anchor_to": "top_middle",
                    "offset": [
                        0,
                        6
                    ],
                    "layer": 1,
                    "bindings": [
                        {
                            "binding_name": "#title_text",
                            "binding_name_override": "#text",
                            "binding_condition": "always_when_visible"
                        }
                    ]
                }
            },
            {
                "page_text": {
                    "type": "label",
                    "text": "#text",
                    "font_size": "medium",
                    "color": [
                        1.0,
                        1.0,
                        1.0
                    ],
                    "shadow": true,
                    "anchor_from": "bottom_middle",
                    "anchor_to": "bottom_middle",
                    "offset": [
                        0,
                        -6
                    ],
                    "layer": 1,
                    "bindings": [
                        {
                            "binding_name": "#page_text",
                            "binding_name_override": "#text",
                            "binding_condition": "always_when_visible"
                        }
                    ]
                }
            },
            // Top-right X button to close
            {
                "close@common_buttons.light_text_button": {
                    "$button_text": "x",
                    "$pressed_button_name": "tmi_close_modal",
                    "size": [
                        18,
                        18
                    ],
                    "anchor_from": "top_right",
                    "anchor_to": "top_right",
                    "offset": [
                        -6,
                        6
                    ],
                    "layer": 2
                }
            },
            {
                "prevBtn@common_buttons.light_text_button": {
                    "$button_text": "<",
                    "$pressed_button_name": "tmi_prev",
                    "size": [
                        18,
                        18
                    ],
                    "anchor_from": "left_middle",
                    "anchor_to": "left_middle",
                    "offset": [
                        6,
                        0
                    ],
                    "layer": 2,
                    "bindings": [
                        {
                            "binding_name": "#prevBtnVisible",
                            "binding_name_override": "#visible"
                        }
                    ]
                }
            },
            {
                "nextBtn@common_buttons.light_text_button": {
                    "$button_text": ">",
                    "$pressed_button_name": "tmi_next",
                    "size": [
                        18,
                        18
                    ],
                    "anchor_from": "right_middle",
                    "anchor_to": "right_middle",
                    "offset": [
                        -6,
                        0
                    ],
                    "layer": 2,
                    "bindings": [
                        {
                            "binding_name": "#nextBtnVisible",
                            "binding_name_override": "#visible"
                        }
                    ]
                }
            },
            // Content area holding the 3x3 grid, arrow and output slot
            {
                "recipes_panel": {
                    "type": "stack_panel",
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "size": [
                        120,
                        136
                    ],
                    "controls": [
                        {
                            "recipe1panel": {
                                "type": "panel",
                                "anchor_from": "center",
                                "anchor_to": "center",
                                "layer": 2,
                                "size": [
                                    120,
                                    68
                                ],
                                "controls": [
                                    {
                                        "bg": {
                                            "type": "image",
                                            "texture": "textures/ui/background_image",
                                            "size": [
                                                120,
                                                68
                                            ],
                                            "layer": 3,
                                            "keep_ratio": false,
                                            "fill": true,
                                            "nineslice_size": 8
                                        }
                                    },
                                    {
                                        "content": {
                                            "type": "stack_panel",
                                            "layer": 3,
                                            "orientation": "horizontal",
                                            "offset": [
                                                -10,
                                                8
                                            ],
                                            "controls": [
                                                {
                                                    "crafting_grid": {
                                                        "type": "panel",
                                                        "size": [
                                                            54,
                                                            54
                                                        ],
                                                        "offset": [
                                                            0,
                                                            0
                                                        ],
                                                        "controls": [
                                                            {
                                                                "input_grid@tmi.input_grid": {
                                                                    "$tmi_recipe_index": 1
                                                                }
                                                            }
                                                        ]
                                                    }
                                                },
                                                {
                                                    "arroww": {
                                                        "type": "panel",
                                                        "size": [
                                                            20,
                                                            "100%"
                                                        ],
                                                        "controls": [
                                                            {
                                                                "arrow": {
                                                                    "offset": [
                                                                        0,
                                                                        -6
                                                                    ],
                                                                    "type": "label",
                                                                    "text": "→",
                                                                    "font_size": "large",
                                                                    "color": [
                                                                        1.0,
                                                                        1.0,
                                                                        1.0
                                                                    ],
                                                                    "anchor_from": "center",
                                                                    "anchor_to": "center"
                                                                }
                                                            }
                                                        ]
                                                    }
                                                },
                                                {
                                                    "result": {
                                                        "size": [
                                                            0,
                                                            "100%"
                                                        ],
                                                        "type": "panel",
                                                        "controls": [
                                                            {
                                                                "output_slot@tmi.slot_item_template": {
                                                                    "offset": [
                                                                        10,
                                                                        -7
                                                                    ],
                                                                    "anchor_from": "center",
                                                                    "anchor_to": "center",
                                                                    "$tmi_recipe_index": 1,
                                                                    "$tmi_slot_id": 9,
                                                                    "$tmi_is_result_slot": true
                                                                }
                                                            }
                                                        ]
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "recipe2panel": {
                                "type": "panel",
                                "anchor_from": "center",
                                "anchor_to": "center",
                                "layer": 2,
                                "size": [
                                    120,
                                    68
                                ],
                                "controls": [
                                    {
                                        "bg": {
                                            "type": "image",
                                            "texture": "textures/ui/background_image",
                                            "size": [
                                                120,
                                                68
                                            ],
                                            "layer": 3,
                                            "keep_ratio": false,
                                            "fill": true,
                                            "nineslice_size": 8
                                        }
                                    },
                                    {
                                        "content": {
                                            "type": "stack_panel",
                                            "layer": 3,
                                            "orientation": "horizontal",
                                            "offset": [
                                                -10,
                                                8
                                            ],
                                            "controls": [
                                                {
                                                    "crafting_grid": {
                                                        "type": "panel",
                                                        "size": [
                                                            54,
                                                            54
                                                        ],
                                                        "offset": [
                                                            0,
                                                            0
                                                        ],
                                                        "controls": [
                                                            {
                                                                "input_grid@tmi.input_grid": {
                                                                    "$tmi_recipe_index": 2
                                                                }
                                                            }
                                                        ]
                                                    }
                                                },
                                                {
                                                    "arroww": {
                                                        "type": "panel",
                                                        "size": [
                                                            20,
                                                            "100%"
                                                        ],
                                                        "controls": [
                                                            {
                                                                "arrow": {
                                                                    "offset": [
                                                                        0,
                                                                        -6
                                                                    ],
                                                                    "type": "label",
                                                                    "text": "→",
                                                                    "font_size": "large",
                                                                    "color": [
                                                                        1.0,
                                                                        1.0,
                                                                        1.0
                                                                    ],
                                                                    "anchor_from": "center",
                                                                    "anchor_to": "center"
                                                                }
                                                            }
                                                        ]
                                                    }
                                                },
                                                {
                                                    "result": {
                                                        "size": [
                                                            0,
                                                            "100%"
                                                        ],
                                                        "type": "panel",
                                                        "controls": [
                                                            {
                                                                "output_slot@tmi.slot_item_template": {
                                                                    "offset": [
                                                                        10,
                                                                        -7
                                                                    ],
                                                                    "anchor_from": "center",
                                                                    "anchor_to": "center",
                                                                    "$tmi_recipe_index": 2,
                                                                    "$tmi_slot_id": 9,
                                                                    "$tmi_is_result_slot": true
                                                                }
                                                            }
                                                        ]
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                ],
                                "bindings": [
                                    {
                                        "binding_name": "#recipe2visible",
                                        "binding_name_override": "#visible"
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "slot_button": {
        "type": "panel",
        "size": [
            18,
            18
        ],
        "$tmi_recipe_index|default": -1,
        "$tmi_slot_id|default": -1,
        "$tmi_is_result_slot": false,
        "controls": [
            {
                "slot_bg@tmi.slot_button_bg": {
                    "$pressed_button_name": "tmi_slot_pressed",
                    "property_bag": {
                        "#tmi_recipe_index": "$tmi_recipe_index",
                        "#tmi_slot_id": "$tmi_slot_id",
                        "#tmi_is_result_slot": "$tmi_is_result_slot"
                    },
                    "bindings": [
                        {
                            "binding_type": "collection_details",
                            "binding_collection_name": "container_items"
                        },
                        {
                            "binding_name": "#collection_index",
                            "binding_type": "collection",
                            "binding_collection_name": "container_items"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "#collection_index",
                            "target_property_name": "#tmi_slot_id"
                        }
                    ]
                }
            },
            {
                "0": {
                    "type": "custom",
                    "renderer": "offhand_hud_renderer",
                    "size": [
                        18,
                        18
                    ],
                    "layer": 3,
                    "$cell_index": "#tmi_slot_id",
                    "property_bag": {
                        "#tmi_recipe_index": "$tmi_recipe_index",
                        "#tmi_slot_id": "$tmi_slot_id",
                        "#tmi_is_result_slot": "$tmi_is_result_slot"
                    },
                    "bindings": [
                        {
                            "binding_type": "collection_details",
                            "binding_collection_name": "container_items"
                        },
                        {
                            "binding_name": "#collection_index",
                            "binding_type": "collection",
                            "binding_collection_name": "container_items"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "#collection_index",
                            "target_property_name": "#tmi_slot_id"
                        }
                    ]
                }
            }
        ]
    },
    "slot_button_bg@common.button": {
        "layer": 2,
        "controls": [
            {
                "default@tmi.slot_button_default": {}
            },
            {
                "hover@tmi.slot_button_hover": {}
            },
            {
                "pressed@tmi.slot_button_pressed": {}
            }
        ]
    },
    "slot_button_default": {
        "type": "image",
        "texture": "textures/ui/item_cell"
    },
    "slot_button_hover": {
        "type": "image",
        "texture": "textures/ui/slot_disabled_hover"
    },
    "slot_button_pressed": {
        "type": "image",
        "texture": "textures/ui/item_cell"
    },
    "slot_item_template@tmi.slot_button": {
        "$item_collection_name": "container_items"
    },
    "input_grid": {
        "type": "grid",
        "anchor_from": "center",
        "anchor_to": "center",
        "offset": [
            0,
            0
        ],
        "grid_dimensions": [
            3,
            3
        ],
        "collection_name": "container_items",
        "grid_item_template": "tmi.slot_item_template",
        "$item_collection_name": "container_items"
    },
    "recipe_screen@common.inventory_screen_common": {
        "type": "screen",
        "is_modal": true,
        "force_render_below": true,
        "absorbs_input": true,
        "is_showing_menu": true,
        "button_mappings": [
            {
                "from_button_id": "button.menu_cancel",
                "to_button_id": "button.menu_exit",
                "mapping_type": "global"
            }
        ],
        "controls": [
            {
                "modal_bg": {
                    "type": "image",
                    "texture": "textures/ui/Black",
                    "alpha": 0.55,
                    "size": [
                        "100%",
                        "100%"
                    ],
                    "anchor_from": "top_left",
                    "anchor_to": "top_left",
                    "keep_ratio": false,
                    "fill": true,
                    "layer": 0
                }
            },
            {
                "content@tmi.simple_panel": {
                    "layer": 1
                }
            }
        ]
    }
}