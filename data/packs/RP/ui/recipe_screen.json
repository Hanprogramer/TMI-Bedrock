            "#tmi_recipe_type": "$tmi_recipe_type"
        },
        "bindings": [
            {
                "source_property_name": "((#tmi_current_recipe_type = #tmi_recipe_type) and (#tmi_recipe_index < #tmi_recipe_count))",
                "target_property_name": "#visible",
                "binding_type": "view"
            },
            {
                "binding_name": "#tmi_current_recipe_type"
            },
            {
                "binding_name": "#tmi_recipe_count"
            }
        ]
    },
    "recipe_screen@common.inventory_screen_common": {
        "type": "screen",
        "is_modal": true,
        "force_render_below": true,
        "absorbs_input": true,
        "is_showing_menu": true,
        "button_mappings": [
