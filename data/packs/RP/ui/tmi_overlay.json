{
    "namespace": "tmi",
    "settings_icon": {
        "type": "image",
        "texture": "textures/ui/icon_setting",
        "layer": 3,
        "size": [
            12,
            12
        ]
    },
    "tmi_overlay": {
        "type": "panel",
        "anchor_from": "left_middle",
        "anchor_to": "left_middle",
        "size": [
            150,
            "100%"
        ],
        "controls": [
            {
                "bg": {
                    "type": "image",
                    "texture": "textures/ui/Black",
                    "alpha": 0.55,
                    "size": [
                        "100%",
                        "100%"
                    ],
                    "anchor_from": "top_left",
                    "anchor_to": "top_left",
                    "keep_ratio": false,
                    "fill": true,
                    "layer": 1
                }
            },
            {
                "panel": {
                    "type": "stack_panel",
                    "orientation": "vertical",
                    "offset": [
                        2,
                        2
                    ],
                    "size": [
                        "100% - 4px",
                        "100% - 4px"
                    ],
                    "anchor_from": "top_left",
                    "anchor_to": "top_left",
                    "controls": [
                        {
                            "top_panel": {
                                "type": "stack_panel",
                                "orientation": "horizontal",
                                "size": [
                                    "100%",
                                    18
                                ],
                                "controls": [
                                    {
                                        "prevBtn@common_buttons.light_text_button": {
                                            "$button_text": "<",
                                            "$pressed_button_name": "tmi_prev",
                                            "size": [
                                                18,
                                                18
                                            ],
                                            "anchor_from": "left_middle",
                                            "anchor_to": "left_middle",
                                            "offset": [
                                                6,
                                                0
                                            ],
                                            "layer": 2
                                        }
                                    },
                                    {
                                        "title_panel": {
                                            "type": "panel",
                                            "size": [
                                                "fill",
                                                "default"
                                            ],
                                            "controls": [
                                                {
                                                    "title": {
                                                        "type": "label",
                                                        "text": "#text",
                                                        "anchor_from": "center",
                                                        "anchor_to": "center",
                                                        "text_alignment": "center",
                                                        "bindings": [
                                                            {
                                                                "binding_name": "#tmi_page_text",
                                                                "binding_name_override": "#text",
                                                                "binding_condition": "always_when_visible"
                                                            }
                                                        ]
                                                    }
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "nextBtn@common_buttons.light_text_button": {
                                            "$button_text": ">",
                                            "$pressed_button_name": "tmi_next",
                                            "size": [
                                                18,
                                                18
                                            ],
                                            "anchor_from": "right_middle",
                                            "anchor_to": "right_middle",
                                            "offset": [
                                                -6,
                                                0
                                            ],
                                            "layer": 2
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "grid_panel": {
                                // "type": "panel",
                                "type": "custom",
                                "renderer": "tmi_overlay_grid_sizer_renderer",
                                "size": [
                                    "100%",
                                    "fill"
                                ],
                                "anchor_from": "top_left",
                                "anchor_to": "top_left",
                                "controls": [
                                    {
                                        "grid": {
                                            "type": "grid",
                                            "property_bag": {
                                                "#tmi_max_grid_item2": 20,
                                                "#tmi_grid_size": [
                                                    6,
                                                    20
                                                ]
                                            },
                                            "grid_item_template": "tmi_common.overlay_item_template",
                                            "grid_dimension_binding": "#tmi_grid_size",
                                            "collection_name": "item_grid",
                                            "$item_collection_name": "item_grid",
                                            "size": [
                                                "100%",
                                                "100%c"
                                            ],
                                            "anchor_from": "top_left",
                                            "anchor_to": "top_left",
                                            "bindings": [
                                                {
                                                    "binding_name": "#tmi_grid_size"
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "bottom_panel": {
                                "type": "stack_panel",
                                "orientation": "horizontal",
                                "size": [
                                    "100%",
                                    18
                                ],
                                "controls": [
                                    {
                                        "tmi_search_field@common.text_edit_box": {
                                            "anchor_from": "left_middle", // the parent
                                            "anchor_to": "left_middle", // this control
                                            "size": [
                                                "fill",
                                                "100%"
                                            ],
                                            "property_bag": {
                                                "#property_field": "#item_name"
                                            },
                                            "max_length": 30,
                                            // "$text_edit_binding_name": "#text_box_item_name",
                                            "$text_box_name": "tmi_search_box"
                                        }
                                    },
                                    {
                                        "settings_btn_panel": {
                                            "type": "panel",
                                            "size": [
                                                18,
                                                18
                                            ],
                                            "offset": [
                                                -6,
                                                0
                                            ],
                                            "controls": [
                                                {
                                                    "btn@common_buttons.light_text_button": {
                                                        "$pressed_button_name": "tmi_settings",
                                                        "size": [
                                                            18,
                                                            18
                                                        ],
                                                        "anchor_from": "center",
                                                        "anchor_to": "center",
                                                        "layer": 2
                                                    }
                                                },
                                                {
                                                    "icon@tmi.settings_icon": {
                                                        "anchor_from": "center",
                                                        "anchor_to": "center",
                                                        "layer": 12
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    }
}